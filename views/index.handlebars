<!-- Título principal da página -->
<h1>Hello World, com handlebars!</h1>

<!-- Verifica se a lista de produtos tem pelo menos um item -->
{{#if produtos.length}}

    <!-- Se houver produtos, percorre cada item da lista -->
    {{#each produtos}}

        <!-- Para cada produto, cria um bloco com nome, preço e descrição -->
        <div>
            <!-- Exibe o nome do produto -->
            <h2>{{this.nome}}</h2>

            <!-- Exibe o preço do produto -->
            <p>Preço: R$ {{this.preco}}</p>

            <!-- Exibe a descrição do produto -->
            <p>Descrição {{this.descricao}}</p>
        </div>

    {{/each}}


{{else}}
    <!-- Se a lista de produtos estiver vazia, mostra esta mensagem -->
    <p>Sem produtos disponíveis no momento.</p>
{{/if}}






